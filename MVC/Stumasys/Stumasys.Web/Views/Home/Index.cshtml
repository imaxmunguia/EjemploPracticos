@model List<Stumasys.Model.Person>

@{
    ViewBag.Title = "Alumnos";
}

<div class="breadcrumb">
    <div class="container">
        <div class="row text-right">          
            <a class="btn btn-primary" href="/Home/Crud" role="button">New Account</a>
        </div>
        <div class="row">
            <h2>
                Students
            </h2>
        </div>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td class="text-right">
                <a class="btn btn-success" href="/Home/Look?personId=@item.PersonID" title="View">
                    <i class="glyphicon glyphicon-user"></i>
                </a>
                <a class="btn btn-primary" href="/Home/Crud?personId=@item.PersonID" title="Edit">
                    <i class="glyphicon glyphicon-pencil"></i>
                </a>
            </td>
        </tr> 
        }
    </tbody>
</table>

